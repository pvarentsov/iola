{
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "rootDir": ".",
  "verbose": true,
  "testEnvironment": "node",
  "testRegex": "./test/.*.spec.ts$",
  "coverageReporters": [
    "lcov",
    "text"
  ],
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@iola/core/(.*)$": "<rootDir>/src/core/$1",
    "@iola/api/(.*)$": "<rootDir>/src/api/$1",
    "@iola/test/(.*)$": "<rootDir>/test/$1"
  },
  "reporters": [
    "default",
    "jest-junit"
  ],
  "testResultsProcessor": "jest-sonar-reporter"
}